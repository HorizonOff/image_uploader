<div class="wrapper">
  <div class="header">
    <h1>Categories</h1>
  </div>

  <div>
    <% if @categories.blank? %>
      <h1>No categories created before</h1>
    <% else %>
      <% @categories.each do |category| %>
        <div>
          <h3><%= category.title %></h3>
          <a href="<%= category_images_path(category.id) %>">Show</a>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="navbar">
    <a href="<%= new_category_path %>" class="btn">New Category</a>
  </div>
</div>
